modules = ["python-3.11", "bash"]

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql", "sqlite"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Enhanced Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Keep Alive"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Website API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Enhanced Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Keep Alive"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python keep_alive.py"

[[workflows.workflow]]
name = "Website API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python website_api.py"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[[ports]]
localPort = 5000
